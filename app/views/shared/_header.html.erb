<header class="header">
  <div class="wrap">
    <div class="header__upper flex">
      <h2><%= @heading_word %></h2>
      <ul class="flex">
        <li>
          <%= link_to "食べログの特長と便利な使い方", '#' %>
        </li>
        <% if user_signed_in? %>
        <li>
          <%= link_to "予約確認", '#' %>
        </li>
        <li>
          <%= link_to "行ったお店", '#' %>
        </li>
        <li class="has-before">
          <%= link_to "保存済み", show_all_keeps_path(@current_user) %>
        </li>
        <li>
          <%= link_to "ログアウト", destroy_user_session_path %>
        </li>
        <% else %>
        <li>
          <%= link_to "無料会員登録",new_user_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_user_session_path %>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="header__lower flex">
      <%= link_to root_path, class: 'contents' do %>
      <h1>
        <%= image_tag "logo_site_black.svg" %>
      </h1>
      <% end %>
      <%= search_form_for @q, url: search_restaurant_path, method: :get, class: 'header__form' do |search| %>
      <%= search.text_field :area_id_cont, placeholder: 'エリア[例:東京、大阪]' %>
      <%= search.text_field :name_or_remarks_gt, placeholder: 'キーワード [例:焼肉、店名、個室]' %>
      <%= search.submit '検索' %>
      <% end %>
    </div>
  </div>
</header>
