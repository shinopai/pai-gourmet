                <% end %>
              </li>
              <li class="flex">
                <%= image_tag "img_aichi.jpg" %>
                <%= link_to all_restaurants_area_path( get_area_id('愛知')) do %>
                愛知<span><%= number_with_delimiter(number_of_resto_by_area(get_area_id('愛知'))) %>件</span>
                <% end %>
              </li>
              <li class="flex">
                <%= image_tag "img_osaka.jpg" %>
                <%= link_to all_restaurants_area_path( get_area_id('大阪')) do %>
                大阪<span><%= number_with_delimiter(number_of_resto_by_area(get_area_id('大阪'))) %>件</span>
                <% end %>
              </li>
              <li class="flex">
                <%= image_tag "img_kyoto.jpg" %>
                <%= link_to all_restaurants_area_path( get_area_id('京都')) do %>
                京都<span><%= number_with_delimiter(number_of_resto_by_area(get_area_id('京都'))) %>件</span>
                <% end %>
              </li>
              <li class="flex">
                <%= image_tag "img_fukuoka.jpg" %>
                <%= link_to all_restaurants_area_path( get_area_id('福岡')) do %>
                福岡<span><%= number_with_delimiter(number_of_resto_by_area(get_area_id('福岡'))) %>件</span>
                <% end %>
              </li>
            </ul>
            <div class="flex">
              <dl class="before">
                <dt class="first">北海道・東北</dt>
                <dd class="flex">
                  <%= link_to '北海道', all_restaurants_area_path( get_area_id('北海道')) %>
                  <%= link_to '青森', all_restaurants_area_path( get_area_id('青森')) %>
                  <%= link_to '秋田', all_restaurants_area_path( get_area_id('秋田')) %>
                  <%= link_to '山形', all_restaurants_area_path( get_area_id('山形')) %>
                  <%= link_to '岩手', all_restaurants_area_path( get_area_id('岩手')) %>
                  <%= link_to '宮城', all_restaurants_area_path( get_area_id('宮城')) %>
                  <%= link_to '福島', all_restaurants_area_path( get_area_id('福島')) %>
                </dd>
                <dt>中部</dt>
                <dd class="flex">
                  <%= link_to '愛知', all_restaurants_area_path( get_area_id('愛知')) %>
                  <%= link_to '岐阜', all_restaurants_area_path( get_area_id('岐阜')) %>
                  <%= link_to '静岡', all_restaurants_area_path( get_area_id('静岡')) %>
                  <%= link_to '三重', all_restaurants_area_path( get_area_id('三重')) %>
                  <%= link_to '新潟', all_restaurants_area_path( get_area_id('新潟')) %>
                  <%= link_to '山梨', all_restaurants_area_path( get_area_id('山梨')) %>
                  <%= link_to '長野', all_restaurants_area_path( get_area_id('長野')) %>
                  <%= link_to '石川', all_restaurants_area_path( get_area_id('石川')) %>
                  <%= link_to '富山', all_restaurants_area_path( get_area_id('富山')) %>
                  <%= link_to '福井', all_restaurants_area_path( get_area_id('福井')) %>
                </dd>
                <dt>中国・四国</dt>
                <dd class="flex">
                  <%= link_to '岡山', all_restaurants_area_path( get_area_id('岡山')) %>
                  <%= link_to '広島', all_restaurants_area_path( get_area_id('広島')) %>
                  <%= link_to '鳥取', all_restaurants_area_path( get_area_id('鳥取')) %>
                  <%= link_to '島根', all_restaurants_area_path( get_area_id('島根')) %>
                  <%= link_to '山口', all_restaurants_area_path( get_area_id('山口')) %>
                  <%= link_to '香川', all_restaurants_area_path( get_area_id('香川')) %>
                  <%= link_to '徳島', all_restaurants_area_path( get_area_id('徳島')) %>
                  <%= link_to '愛媛', all_restaurants_area_path( get_area_id('愛媛')) %>
                  <%= link_to '高知', all_restaurants_area_path( get_area_id('高知')) %>
                </dd>
              </dl>
              <dl class="after">
                <dt class="first">関東</dt>
                <dd class="flex">
                  <%= link_to '東京', all_restaurants_area_path( get_area_id('東京')) %>
                  <%= link_to '神奈川', all_restaurants_area_path( get_area_id('神奈川')) %>
                  <%= link_to '埼玉', all_restaurants_area_path( get_area_id('埼玉')) %>
                  <%= link_to '千葉', all_restaurants_area_path( get_area_id('千葉')) %>
                  <%= link_to '栃木', all_restaurants_area_path( get_area_id('栃木')) %>
                  <%= link_to '茨城', all_restaurants_area_path( get_area_id('茨城')) %>
                  <%= link_to '群馬', all_restaurants_area_path( get_area_id('群馬')) %>
                </dd>
                <dt>関西</dt>
                <dd class="flex">
                  <%= link_to '大阪', all_restaurants_area_path( get_area_id('大阪')) %>
                  <%= link_to '兵庫', all_restaurants_area_path( get_area_id('兵庫')) %>
                  <%= link_to '京都', all_restaurants_area_path( get_area_id('京都')) %>
                  <%= link_to '滋賀', all_restaurants_area_path( get_area_id('滋賀')) %>
                  <%= link_to '奈良', all_restaurants_area_path( get_area_id('奈良')) %>
