<%= render partial: 'shared/page_title', locals: { page_title: 'グルメ・レストラン予約サイト' } %>

<div class="home">
  <div class="home__header">
    <div class="wrap">
      <div class="home__header-nav flex">
        <%= link_to root_path, class: 'contents' do %>
        <h1>
          <%= image_tag "logo_site_white.svg" %>
        </h1>
        <% end %>
        <ul class="flex">
          <li>
            <%= link_to "食べログの特長と便利な使い方", '#' %>
          </li>
          <% if user_signed_in? %>
          <li>
            <%= link_to "予約確認", '#' %>
          </li>
          <li>
            <%= link_to "行ったお店", '#' %>
          </li>
          <li>
            <%= link_to "保存済み", '#' %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_user_session_path %>
          </li>
          <% else %>
          <li>
            <%= link_to "無料会員登録",new_user_registration_path %>
          </li>
          <li>
            <%= link_to "ログイン", new_user_session_path %>
          </li>
          <% end %>
        </ul>
      </div>
      <div class="home__header-contents">
        <figure>
          <%= image_tag "img_home01.png" %>
        </figure>
        <div class="flex">
          <%= link_to image_tag('ico_home01.png'), 'https://itunes.apple.com/jp/app/id763377066?mt=8', target: 'blank' %>
          <%= link_to image_tag('ico_home02.png'), 'https://play.google.com/store/apps/details?id=com.kakaku.tabelog', target: 'blank' %>
        </div>
        <%= search_form_for @q, url: search_restaurant_path, method: :get, class: 'home__header-form flex' do |search| %>
        <p>エリア・キーワードから探す</p>
        <%= search.text_field :area_id_cont, placeholder: 'エリア[例:東京、大阪]' %>
        <%= search.text_field :name_or_remarks_gt, placeholder: 'キーワード [例:焼肉、店名、個室]' %>
        <%= search.submit '検索' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="home__main">
    <div class="wrap">
      <div class="home__main-inner flex">
        <div class="before">
          <!-- エリアから探す -->
          <section class="home__main-area-sect">
            <h2 class="home__main-heading">エリアから探す</h2>
            <ul class="flex">
