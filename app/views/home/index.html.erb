                </dd>
                <dt>九州・沖縄</dt>
                <dd class="flex">
                  <%= link_to '福岡', all_restaurants_area_path( get_area_id('福岡')) %>
                  <%= link_to '佐賀', all_restaurants_area_path( get_area_id('佐賀')) %>
                  <%= link_to '長崎', all_restaurants_area_path( get_area_id('長崎')) %>
