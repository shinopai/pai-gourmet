<div class="auth-form__wrap">
  <div class="wrap">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'auth-form' }) do |new_user| %>
    <h2 class="auth-form__heading">無料会員登録</h2>
    <hr class="auth-form__rule">
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="auth-form__item first">
      <%= new_user.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'ユーザー名' %>
    </div>

    <div class="auth-form__item">
      <%= new_user.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス' %>
    </div>

    <div class="auth-form__item">
      <%= new_user.password_field :password, autocomplete: "new-password", placeholder: 'パスワード' %>
    </div>

    <div class="auth-form__item">
      <%= new_user.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'パスワード(確認)' %>
    </div>

    <div class="auth-form__item">
      <%= new_user.file_field :profile_image, autocomplete: "new-password" %>
    </div>

    <div class="auth-form__item last">
      <%= new_user.submit "登録" %>
    </div>
    <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
